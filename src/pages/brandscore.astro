---
import DefaultLayout from '@/layouts/DefaultLayout.astro';
import { ScoreDomainSearch } from '@/components/sections/score-domain-search';
---

<DefaultLayout
  title="AI Authority Score"
  description="Discover how authoritative your brand appears across AI search experiences."
>
  <section class="container">
    <div
      class="bordered-div-padding flex flex-col items-center gap-6 border-x text-center md:gap-8 lg:gap-12 lg:!py-24"
    >
      <span
        class="text-primary text-xs font-semibold tracking-[0.3em] uppercase md:text-sm"
      >
        AI Authority Score
      </span>
      <h1
        class="font-weight-display text-3xl leading-tight tracking-tighter md:text-4xl lg:text-6xl"
      >
        Benchmark your AI visibility across search ecosystems
      </h1>
      <p
        class="text-muted-foreground mx-auto max-w-2xl text-sm leading-relaxed md:text-base lg:text-lg"
      >
        Understand where your organization stands today and uncover the actions
        that will elevate your visibility across AI-generated answers,
        assistants, and search agents.
      </p>
    </div>
  </section>
  <ScoreDomainSearch client:load />
</DefaultLayout>
