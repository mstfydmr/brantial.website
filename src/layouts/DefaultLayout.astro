---
import { ClientRouter } from 'astro:transitions';

import BaseHead from '@/components/BaseHead.astro';
import { SITE_METADATA } from '@/consts';
import Footer from '@/components/layout/footer';
import Navbar from '@/components/layout/navbar';

const { title, description } = Astro.props;
const currentPath = Astro.url.pathname;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <!-- WebPage + BreadcrumbList JSON-LD -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'WebPage',
        name: title || SITE_METADATA.title.default,
        url: new URL(Astro.url.pathname, Astro.site),
        description: description || SITE_METADATA.description,
        isPartOf: {
          '@type': 'WebSite',
          name: SITE_METADATA.title.default,
          url: Astro.site,
        },
      })}
    />
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'BreadcrumbList',
        itemListElement: [
          {
            '@type': 'ListItem',
            position: 1,
            name: 'Home',
            item: new URL('/', Astro.site),
          },
          {
            '@type': 'ListItem',
            position: 2,
            name: title || SITE_METADATA.title.default,
            item: new URL(Astro.url.pathname, Astro.site),
          },
        ],
      })}
    />
  </head>
  <body class={`min-h-screen antialiased flex flex-col`}>
    <Navbar currentPage={currentPath} client:load />
    <main class="flex-1"><slot /></main>
    <Footer client:load />
    <!-- CookieConsent config script -->
    <script type="module" src="/js/cookieconsent-config.js" defer></script>
  </body>
</html>
